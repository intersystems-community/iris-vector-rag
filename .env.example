# =============================================================================
# RAG Templates Environment Configuration
# =============================================================================
# 
# This file serves as a template for environment variables required by the
# RAG Templates project. Copy this file to .env and fill in the actual values.
#
# SECURITY NOTE: Never commit .env files with real secrets to version control.
# This .env.example file should only contain example/placeholder values.
#
# =============================================================================

# =============================================================================
# OpenAI API Configuration
# =============================================================================
# Required for LLM functionality and embeddings
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Optional: OpenAI Organization ID (if using organization account)
# OPENAI_ORG_ID=org-your-organization-id

# Optional: OpenAI Model Configuration
# OPENAI_MODEL=gpt-4
# OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# =============================================================================
# InterSystems IRIS Database Configuration
# =============================================================================
# Required for vector storage and RAG pipeline functionality
IRIS_HOST=localhost
IRIS_PORT=1972
IRIS_USERNAME=SuperUser
IRIS_PASSWORD=SYS
IRIS_NAMESPACE=USER

# Optional: IRIS Connection Pool Settings
# IRIS_MAX_CONNECTIONS=10
# IRIS_CONNECTION_TIMEOUT=30

# Optional: IRIS SSL Configuration
# IRIS_USE_SSL=false
# IRIS_SSL_CERT_PATH=/path/to/cert.pem
# IRIS_SSL_KEY_PATH=/path/to/key.pem

# =============================================================================
# Application Configuration
# =============================================================================
# Environment mode: development, testing, production
APP_ENV=development

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Optional: Custom log file path
# LOG_FILE_PATH=/var/log/rag-templates/app.log

# =============================================================================
# RAG Pipeline Configuration
# =============================================================================
# Default embedding provider: openai, huggingface, local
EMBEDDING_PROVIDER=openai

# Default LLM provider: openai, anthropic, local
LLM_PROVIDER=openai

# Vector dimension for embeddings (must match your embedding model)
VECTOR_DIMENSION=1536

# Default chunk size for document processing
CHUNK_SIZE=1000

# Default chunk overlap for document processing
CHUNK_OVERLAP=200

# =============================================================================
# Performance and Scaling Configuration
# =============================================================================
# Maximum number of documents to process in batch operations
MAX_BATCH_SIZE=100

# Default number of retrieved documents for RAG
DEFAULT_TOP_K=5

# Query timeout in seconds
QUERY_TIMEOUT=30

# =============================================================================
# Testing Configuration
# =============================================================================
# Test database settings (separate from production)
TEST_IRIS_HOST=localhost
TEST_IRIS_PORT=1972
TEST_IRIS_USERNAME=SuperUser
TEST_IRIS_PASSWORD=SYS
TEST_IRIS_NAMESPACE=RAGTEST

# Test data configuration
TEST_DOCUMENT_COUNT=1000
TEST_USE_SAMPLE_DATA=true

# =============================================================================
# Monitoring and Health Checks
# =============================================================================
# Enable health monitoring
ENABLE_HEALTH_MONITORING=true

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=60

# Metrics collection endpoint (optional)
# METRICS_ENDPOINT=http://localhost:9090/metrics

# =============================================================================
# Security Configuration
# =============================================================================
# Enable strict import validation (recommended for production)
STRICT_IMPORT_VALIDATION=true

# Disable silent fallbacks (recommended for production)
DISABLE_SILENT_FALLBACKS=true

# Enable audit logging
ENABLE_AUDIT_LOGGING=true

# =============================================================================
# Development and Debugging
# =============================================================================
# Enable debug mode (development only)
DEBUG_MODE=false

# Enable verbose logging for specific components
# DEBUG_EMBEDDINGS=false
# DEBUG_VECTOR_STORE=false
# DEBUG_LLM_CALLS=false

# Enable performance profiling
# ENABLE_PROFILING=false

# =============================================================================
# External Service Configuration
# =============================================================================
# Optional: Anthropic API (if using Claude)
# ANTHROPIC_API_KEY=your-anthropic-api-key

# Optional: Hugging Face API (if using HF models)
# HUGGINGFACE_API_KEY=your-huggingface-api-key

# Optional: Weights & Biases (for experiment tracking)
# WANDB_API_KEY=your-wandb-api-key
# WANDB_PROJECT=rag-templates

# =============================================================================
# Docker and Container Configuration
# =============================================================================
# Docker-specific settings (when running in containers)
# DOCKER_IRIS_HOST=iris-container
# DOCKER_NETWORK=rag-network

# =============================================================================
# CI/CD Configuration
# =============================================================================
# CI environment detection
# CI=true
# GITLAB_CI=true
# GITHUB_ACTIONS=true

# Test execution settings for CI
# CI_SKIP_SLOW_TESTS=false
# CI_PARALLEL_WORKERS=4

# =============================================================================
# NOTES
# =============================================================================
#
# 1. Required Variables:
#    - OPENAI_API_KEY: Essential for LLM and embedding functionality
#    - IRIS_* variables: Required for database connectivity
#
# 2. Security Best Practices:
#    - Never commit real API keys or passwords
#    - Use strong passwords for database connections
#    - Enable STRICT_IMPORT_VALIDATION in production
#    - Set DISABLE_SILENT_FALLBACKS=true in production
#
# 3. Environment-Specific Settings:
#    - Development: DEBUG_MODE=true, LOG_LEVEL=DEBUG
#    - Testing: Use separate TEST_* database settings
#    - Production: STRICT_IMPORT_VALIDATION=true, DEBUG_MODE=false
#
# 4. Performance Tuning:
#    - Adjust VECTOR_DIMENSION based on your embedding model
#    - Tune CHUNK_SIZE and CHUNK_OVERLAP for your documents
#    - Set appropriate MAX_BATCH_SIZE based on available memory
#
# 5. Monitoring:
#    - Enable ENABLE_HEALTH_MONITORING for production systems
#    - Configure METRICS_ENDPOINT for observability
#    - Set appropriate HEALTH_CHECK_INTERVAL
#
# =============================================================================